<odoo>

    <record model="ir.ui.view" id="animal_species_form_view">
        <field name="name">animal_species.form</field>
        <field name="model">manager.animal_species</field>
        <field name="arch" type="xml">
            <form string="Animal species form">
                <sheet>
                    <group colspan="4">
                        <field name = "name" />
	                    <field name = "species_id" />
                        <field name= "feeding_type" />
                        <field name= "heat_period" />
                        <field name= "inventory" />
                </group>
            </sheet>
        </form>
    </field>
</record>

<record model="ir.ui.view" id="animal_species_tree_view">
    <field name="name">animal_species.tree</field>
    <field name="model">manager.animal_species"</field>
    <field name="arch" type="xml">
        <tree string="Animal species">
                    <field name = "species_id" />
                    <field name="feeding_type" />
                    <field name="heat_period" />
                    <field name="inventory" />
           </tree>
       </field>
  </record>

  <menuitem id="manager_menu_animal_species" name="Animal_species"  parent="manager_menu_root"/>

  <menuitem name="list of animal_species" id="manager_list_animal_species" parent="manager_menu_species" 
            action="animal_species_list_action"/>

</odoo>
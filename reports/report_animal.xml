<odoo>
    <report
        id="report_animal"
        model="ges.animal"
        string="animal Employee Report"
        report_type="qweb-pdf"
        name="RecuperacionOdoo.report_animal_view"
        file="RecuperacionOdoo.report_animal"
    />

    <template id="minimal_layout_inherit" inherit_id="web.minimal_layout">
      <xpath expr="//head" position="inside">
             <link rel='stylesheet' href="/RecuperacionOdoo/static/src/css/style.css"/>
      </xpath>
    </template>

    <template id="report_animal_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="header">
                    <img src='/RecuperacionOdoo/static/src/img/logo.png'/>
                    <h1>Natural Parks App</h1>
                </div> 
                <hr></hr>
                <div class="page">
                    <h1>animal Report</h1>
                    <p style="font-size: 22px;"><b>Name:</b> <span t-field="doc.name"/> </p>
                    <p style="font-size: 22px;"><b>Common name:</b> <span t-field="doc.common_name"/> </p>
                    <p style="font-size: 22px;"><b>Alimentatation:</b> <span t-field="doc.alimentation"/> </p>
                    <p style="font-size: 22px;"><b>Mating season:</b> <span t-field="doc.mating_season"/> </p>
                    <p style="font-size: 22px;"><b>Is eaten?:</b> <span t-field="doc.is_eaten"/> </p>
                    <p style="font-size: 22px;"><b>Animals that eat this animal:</b> <span t-field="doc.animal_ids"/> </p>
                </div> 
            </t>
        </t>
    </template>
</odoo>
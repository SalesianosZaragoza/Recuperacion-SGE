<odoo>
    <report
        id="report_excursion"
        model="appnaturalparks.excursion"
        string="Excursion Report"
        report_type="qweb-pdf"
        name="RecuperacionOdoo.report_excursion_view"
        file="RecuperacionOdoo.report_excursion"
    />

    <template id="minimal_layout_inherit" inherit_id="web.minimal_layout">
      <xpath expr="//head" position="inside">
             <link rel='stylesheet' href="/RecuperacionOdoo/static/src/css/style.css"/>
      </xpath>
    </template>

    <template id="report_excursion_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="header">
                    <h1>Spanish Natural Parks App</h1>
                </div> 
                <hr></hr>
                <div class="page">
                    <h1 t-field="doc.name"/>
                    <p style="font-size: 22px;"><b>Natural Park:</b> <span t-field="doc.natural_park_id"/> </p>
                    <p style="font-size: 22px;"><b>Organized by:</b> <span t-field="doc.hotel_id"/> </p>
                    <p style="font-size: 22px;"><b>From</b> <span t-field="doc.starting_date"/> <b>To</b> <span t-field="doc.ending_date"/></p>
                    <h2>Visitors: </h2>
                    <ul>
                        <t t-foreach="doc.visitor_ids" t-as="visitor">
                            <li><span t-field="visitor.name" style="font-size: 22px;"/></li>
                        </t>
                    </ul>
                    <p style="font-size: 22px;"><b>Excursion Type:</b> <span t-field="doc.excursion_type"/></p>
                </div>

            </t>
        </t>
    </template>
</odoo> 
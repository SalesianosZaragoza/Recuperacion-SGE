<odoo>
    <report
        id="report_research"
        model="naturalparks.research"
        string="Research Report"
        report_type="qweb-pdf"
        name="RecuperacionOdoo.report_research_view"
        file="RecuperacionOdoo.report_research"
    />

    <template id="minimal_layout_inherit" inherit_id="web.minimal_layout">
      <xpath expr="//head" position="inside">
             <link rel='stylesheet' href="/RecuperacionOdoo/static/src/css/style.css"/>
      </xpath>
    </template>

    <template id="report_research_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                
                <div class="header">
                    <img src='/RecuperacionOdoo/static/src/img/logo.png'/>
                    <h1>Natural Parks App</h1>
                </div> 
                <div class="page">
                    <h1>Researcher Report</h1>
                    <p style="font-size: 22px;">Name: <span t-field="doc.name"/> </p>
                    <p style="font-size: 22px;">Dni: <span t-field="doc.dni"/> </p>
                    <p style="font-size: 22px;">Social Security: <span t-field="doc.social_security"/></p>
                    <p style="font-size: 22px;">Mobile: <span t-field="doc.mobile_phone"/></p>
                    <p style="font-size: 22px;">Landline: <span t-field="doc.landline"/></p>
                    <p style="font-size: 22px;">Salary: <span t-field="doc.salary"/> â‚¬</p>
                    <hr></hr>
                    <p style="font-size: 22px;">Workplace: <span t-field="doc.natural_park_id"/></p>
                    <p style="font-size: 22px;">Research Area: <span t-field="doc.title"/></p>
                </div>
                
            </t>
        </t>
    </template>
</odoo>
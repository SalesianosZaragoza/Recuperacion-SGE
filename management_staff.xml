<odoo>

    <record model="ir.ui.view" id="management_staff_form_view">
        <field name="name">management_staff.form</field>
        <field name="model">manager.management_staff</field>
        <field name="arch" type="xml">
            <form string="Management staff form">
                <sheet>
                    <group colspan="4">
                        <field name="name" />
                        <field name="staff_id" />
                        <field name = "entry" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="management_staff_tree_view">
        <field name="name">management_staff.tree</field>
        <field name="model">manager.management_staff"</field>
        <field name="arch" type="xml">
            <tree string="Management staff">
                <field name="name" />
                <field name="staff_id" />
                <field name = "entry" />
            </tree>
        </field>
    </record>

    <menuitem id="manager_menu_management_staff" name="Management_staff"  parent="manager_menu_root"/>

    <menuitem name="list  of manager_staff" id="manager_list_manager_staff" parent="manager_menu_staff" 
              action="manager_staff_list_action"/>


</odoo>
<odoo>
    <record model="ir.ui.view" id="ca_form_view">
        <field name="name">ca.form</field>
        <field name="model">npi.ca</field>
        <field name="arch" type="xml">
            <form string="CA Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="extension"/> 
                        <field name="responsible_body"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ca_tree_view">
        <field name="name">ca.tree</field>
        <field name="model">npi.ca</field>
        <field name="arch" type="xml">
            <tree string="CA Tree">
                <field name="name"/>
                <field name="extension"/> 
                <field name="responsible_body" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ca_list_action">
        <field name="name">Community</field>
            <field name="res_model">npi.ca</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Insert a community</p>
            </field>
    </record>

    <menuitem id="ca_menu" name="Autonomous Community" parent="npi_menu" action="ca_list_action"/>
</odoo>
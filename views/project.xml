<odoo>
    <record model="ir.ui.view" id="project_form_view">
        <field name="name">project.form</field>
        <field name="model">ges.project</field>
        <field name="arch" type="xml">
            <form string="Project Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="research_ids"/>
                        <field name="species_id"/>
                        <field name="budget" options='{"type": "number", "step": 1000}'/>
                        <field name="starting_date"/>
                        <field name="ending_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="project_tree_view">
        <field name="name">project.tree</field>
        <field name="model">ges.project</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == '1.draft'" decoration-success="state == '2.confirm'" decoration-danger="state == '3.done'" string="Project Tree">
                <field name="name"/>
                <field name="research_ids"/>
                <field name="species_id"/>
                <field name="budget"/>
                <field name="starting_date"/>
                <field name="ending_date"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="project_calendar_view">
        <field name="name">project.calendar</field>
        <field name="model">ges.project</field>
        <field name="arch" type="xml">
            <calendar string="Project Calendar" date_start="starting_date" date_stop="ending_date" quick_add="False">
                <field name="name"/>
                <field name="species_id"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="project_graph_view">
        <field name="name">project.graph</field>
        <field name="model">ges.project</field>
        <field name="arch" type="xml">
            <graph string="Projects">
                <field name="name"/>
                <field name="budget" type="measure"/>
            </graph>
        </field>
    </record>

    <record model="ir.actions.act_window" id="project_list_action">
        <field name="name">Project</field>
        <field name="res_model">ges.project</field>
        <field name="view_mode">tree,form,calendar,graph</field>
    </record>

    <record model="ir.ui.view" id="project_search_view">
        <field name="name">project.search</field>
        <field name="model">ges.project</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter name="high_budget" string="High Budget"
                        domain="[('budget', '&gt;', 30000)]"/>
                <filter name="low_budget" string="Low Budget"
                        domain="[('budget', '&lt;', 30000)]"/>
                <group string="Group By">
                    <filter name="by_species" string="Species"
                            context="{'group_by': 'species_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <menuitem id="project_menu" name="Research Project"
        parent="employees_menu"
        action="project_list_action"/>
</odoo>
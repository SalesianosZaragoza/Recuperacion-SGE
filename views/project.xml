<odoo>
    <record model="ir.ui.view" id="project_form_view">
        <field name="name">project.form</field>
        <field name="model">npi.project</field>
        <field name="arch" type="xml">
            <form string="Project Form">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="budget" />
                        <field name="realizationPeriod" />
                        <field name="species_id" />
                        <field name="investigator_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="project_tree_view">
        <field name="name">project.tree</field>
        <field name="model">npi.project</field>
        <field name="arch" type="xml">
            <tree string="Project Tree">
                <field name="name" />
                <field name="budget" />
                <field name="realizationPeriod" />
                <field name="species_id" />
                <field name="investigator_id" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="project_list_action">
        <field name="name">Project</field>
        <field name="res_model">npi.project</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Insert a project</p>
        </field>
    </record>

    <menuitem id="project_menu" name="Project" parent="npi_menu" action="project_list_action" />
</odoo>
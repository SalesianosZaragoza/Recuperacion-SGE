<odoo>

    <record model="ir.ui.view" id="visitor_form_view">
        <field name="name">visitor.form</field>
        <field name="model">recu.visitor</field>
        <field name="arch" type="xml">
            <form string="visitor Form">
                <sheet>
                    <group>
                        <field name="dni"/>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="work"/>
                        <field name="management_id"/>
                        <field name="acommodation_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="visitor_list_action">
        <field name="name">Visitor</field>
        <field name="res_model">recu.visitor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Insertar visitante</p>
        </field>
    </record>


    <menuitem id="visitor_menu" name="Visitor" parent="recu_menu" action="visitor_list_action"/>

</odoo> 
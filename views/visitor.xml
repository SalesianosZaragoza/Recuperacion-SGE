<odoo>
    <record model="ir.ui.view" id="visitor_form_view">
        <field name="name">visitor.form</field>
        <field name="model">appnaturalparks.visitor</field>
        <field name="arch" type="xml">
            <form string="Visitor Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="dni"/>
                        <field name="address"/>
                        <field name="job"/>
                        <field name="natural_park_id"/>
                        <field name="hotel_id"/>
                        <field name="management_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="visitor_tree_view">
        <field name="name">visitor.tree</field>
        <field name="model">appnaturalparks.visitor</field>
        <field name="arch" type="xml">
            <tree string="Visitor Tree">
                <field name="name"/>                    
                <field name="dni"/>
                <field name="address"/>
                <field name="job"/>
                <field name="natural_park_id"/>
                <field name="hotel_id"/>
                <field name="management_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="visitor_list_action">
        <field name="name">Visitor</field>
        <field name="res_model">appnaturalparks.visitor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new visitor of the park
            </p>
        </field>
    </record>

    <record model="ir.ui.view" id="visitor_search_view">
        <field name="name">visitor.search</field>
        <field name="model">appnaturalparks.visitor</field>
        <field name="arch" type="xml">
            <search>
                <field name="dni"/>
                <field name="name"/>
                <group string="Group By">
                    <filter name="by_hotel" string="Hotel"
                        context="{'group_by': 'hotel_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <menuitem id="visitor_menu" name="Visitor"
        parent="naturalparks_menu"
        action="visitor_list_action"/>

</odoo>

<odoo>

 
    <record model="ir.ui.view" id="project_form_view">
        <field name="name">project.form</field>
        <field name="model">manager.project</field>
        <field name="arch" type="xml">
            <form string="Project form">
                <sheet>
                    <group colspan="4">
                       <field name="name" />
                       <field name="project_about"/>
                       <field name="budget"/>
                       <field name="period"/>
                    </group>
                       
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="project_list_action">
        <field name="name">project</field>
        <field name="res_model">manager.project</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="arch" type="xml">
            <tree string="List of project">
                <field name="name" />
			    <field name="project_about"/>
			    <field name="budget"/>
                <field name="period"/>
            </tree>
        </field>
    </record>

    <menuitem id="manager_menu_project" name="Project"  parent="manager_menu_root"/>

    
    <menuitem name="list  of project" id="manager_list_project" parent="manager_menu_project" 
              action="project_list_action"/>
   

              
</odoo>
<odoo>

    <record model="ir.ui.view" id="conservation_staff_form_view">
        <field name="name">conservation_staff.form</field>
        <field name="model">manager.conservation_staff</field>
        <field name="arch" type="xml">
            <form string="Conservation staff form">
                <sheet>
                    <group colspan="4">
                       <field name="name" />
                       <field name="staff_id"/>
                       <field name="specialization"/>
                       <field name="area_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

   
    <record model="ir.ui.view" id="conservation_staff_tree_view">
        <field name="name">conservation_staff.tree</field>
        <field name="model">manager.conservation_staff"</field>
        <field name="arch" type="xml">
            <tree string="Conservation staff">
             		 <field name="name" />
			         <field name ="staff_id" />
               	     <field name="specialization"/>
		             <field name="area_id"/>
            </tree>
        </field>
    </record>

    <menuitem id="manager_menu_conservation_staff" name="Conservation_staff"  parent="manager_menu_root"/>

    <menuitem name="list  of conservation_staff" id="manager_list_conservation_staff" parent="manager_menu_staff"
    action="conservation_staff_list_action"/>

</odoo>
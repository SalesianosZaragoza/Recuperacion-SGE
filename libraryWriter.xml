<odoo>   

        <record model="ir.actions.act_window" id="Author_list_action">
            <field name = "name">Author</field>
            <field name = "res_model">author.model</field>
            <field name = "view_type">form</field>
            <field name = "view_mode">tree,form</field>
            <!-- <field name = "help" type= "html">
                <p class="oe_view_nocontent_create">Entidad usada como base para el examen</p>
            </field> -->
        </record>

        <record model="ir.actions.act_window" id="Book_list_action">
            <field name = "name">Books</field>
            <field name = "res_model">author.model</field>
            <field name = "view_type">form</field>
            <field name = "view_mode">tree,formc,calendar,kanban</field>
            <!-- <field name = "help" type= "html">
                <p class="oe_view_nocontent_create">Entidad usada como base para el examen</p>
            </field> -->
        </record>

        <record model="ir.actions.act_window" id="Award_list_action">
            <field name = "name">Awards</field>
            <field name = "res_model">awards.model</field>
            <field name = "view_type">form</field>
            <field name = "view_mode">tree,form,calendar,kaban</field>
            <!-- <field name = "help" type= "html">
                <p class="oe_view_nocontent_create">Entidad usada como base para el examen</p>
            </field> -->
        </record>
        
        <record model="ir.ui.view" id="author_tree_view">
            <field name="name">Author.tree</field>
            <field name="model">author.model</field>    
            <field name="arch" type="xml">
                <form string = 'Author Tree'>
                    <field name="name"/>
                    <field name="birthdate"/>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="book_tree_view">
            <field name="name">Book.tree</field>
            <field name="model">book.model</field>    
            <field name="arch" type="xml">
                <form string = 'Author Tree'>
                    <field name="name"/>
                    <field name="author"/>
                    <field name="publication_date"/>
                    <field name="topic"/>
                </form>
            </field>
        </record>
         
          <!-- FILTER SEARCH -->
        <record model="ir.ui.view" id="book_search_view">
            <field name="name">book.search</field>
            <field name="model">book.model</field>
            <field name="arch" type="xml">
                <search>
                    <group string="Group By">
                        <filter name="by_author" string="autor"
                            context="{'group_by': 'author_id'}"/>  AÑADIR AUTHOR ID Y REALIZAR RELACION EN BOOK.MODEL
                    </group>
                </search>
            </field>
        </record>

        <!-- CREATE CALENDAR VIEW -->
        <record model="ir.ui.view" id="book_calendar_view">
            <field name="name">book.calendar</field>
            <field name="model">book.model</field>
            <field name="arch" type="xml">
                <calendar string="Calendario" date_start="start_date"> AÑADIR START DATE EN BOOK.MODEL
                    <field name="name"/>
                </calendar>
            </field>
        </record>
        <record model="ir.ui.view" id="view_openacad_session_kanban">
            <field name="name">book.kanban</field>
            <field name="model">book.model</field>
            <field name="arch" type="xml">
                <kanban default_group_by="autor_id">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                    t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <div class="oe_dropdown_toggle">
                                        <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    Titulo libro:
                                    <field name="name"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>







       
                      
        <menuitem id="base_menu" name="Modulo Base"/>      
        <menuitem id="modulo_base" name="Modulo Base" parent = "base_menu"/>
        <menuitem id="persona_menu" name="Persona" parent = "modulo_base" action = "entidad_list_action"/>
        <menuitem id="empresa_menu" name="Empresa" parent = "modulo_base" action = "empresa_list_action"/<name />
    
</odoo>

<odoo>

        <record model="ir.ui.view" id="plant_form_view">
            <field name="name">plant.form</field>
            <field name="model">RecuperacionOdooCristianMarin.plant</field>
            <field name="arch" type="xml">
                <form string="Plant Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="common_name"/>
                            <field name="number_of_specimens"/>
                            <field name="flowering"/>
                            <field name="flowering_period"/>
                            <field name="is_eaten"/>
                            <field name="animal_ids"/>
                            <field name="area_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record model="ir.ui.view" id="animal_form_view">
            <field name="name">animal.form</field>
            <field name="model">RecuperacionOdooCristianMarin.animal</field>
            <field name="arch" type="xml">
                <form string="Animal Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="common_name"/>
                            <field name="number_of_specimens"/>
                            <field name="alimentation"/>
                            <field name="mating_season"/>
                            <field name="is_eaten"/>
                            <field name="animal_ids"/>
                            <field name="area_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="mineral_form_view">
            <field name="name">mineral.form</field>
            <field name="model">RecuperacionOdooCristianMarin.mineral</field>
            <field name="arch" type="xml">
                <form string="Mineral Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="common_name"/>
                            <field name="number_of_specimens"/>
                            <field name="mineral_type"/>
                            <field name="area_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="plant_list_action">
            <field name="name">Plant</field>
            <field name="res_model">RecuperacionOdooCristianMarin.plant</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Inserte una planta</p>              
            </field>
        </record>

        <record model="ir.actions.act_window" id="mineral_list_action">
            <field name="name">Mineral</field>
            <field name="res_model">RecuperacionOdooCristianMarin.mineral</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Insertar un mineral</p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="animal_list_action">
            <field name="name">Animal</field>
            <field name="res_model">RecuperacionOdooCristianMarin.animal</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Insertar un animal</p>
            </field>
        </record>


        <menuitem id="plant_menu" name="Plant" parent="RecuperacionOdooCristianMarin_menu" action="plant_list_action"/>
        <menuitem id="animal_menu" name="Animal" parent="RecuperacionOdooCristianMarin_menu" action="animal_list_action"/>
        <menuitem id="mineral_menu" name="Mineral" parent="RecuperacionOdooCristianMarin_menu" action="mineral_list_action"/>

</odoo> 